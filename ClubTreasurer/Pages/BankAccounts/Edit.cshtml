@page
@model ClubTreasurer.Pages.BankAccounts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>BankAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BankAccountModel.BankAccount.ID" />
            <div class="form-group">
                <label asp-for="BankAccountModel.BankAccount.ID" class="control-label"></label>
                <input asp-for="BankAccountModel.BankAccount.ID" class="form-control" />
                <span asp-validation-for="BankAccountModel.BankAccount.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountModel.BankAccount.Name" class="control-label"></label>
                <input asp-for="BankAccountModel.BankAccount.Name" class="form-control" />
                <span asp-validation-for="BankAccountModel.BankAccount.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountModel.BankAccount.Person" class="control-label"></label>
                <select asp-for="BankAccountModel.BankAccount.Person.ID" class="form-control" 
                        asp-items="@Model.BankAccountModel.AccountOwnerSelectList"></select>
                <span asp-validation-for="BankAccountModel.BankAccount.Person.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
