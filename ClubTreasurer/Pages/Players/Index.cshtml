@page
@model ClubTreasurer.Pages.Players.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].FirstName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Players[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Players[0].LastModified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Players)
        {
            var imageUrl = item.Image != null ? " data:image;base64," + Convert.ToBase64String(item.Image) : "";

            <tr>
                <td>
                    @if (item.Image != null)
                    {
                        <img src="@imageUrl" alt="Player Image" class="player-image" width="20" height="20" style="border-radius: 50%;"/>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
