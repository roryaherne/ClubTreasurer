@page
@model ClubTreasurer.Pages.Transactions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a> |
    <a asp-page="Import">Import</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BankTransaction[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankTransaction[0].Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankTransaction[0].ReferenceNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankTransaction[0].TransactionCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankTransaction[0].Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankTransaction[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankTransaction[0].LastModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankTransaction[0].LastModifiedBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BankTransaction) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionCategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.IBAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModifiedBy.UserName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
